<div class="page">
    <main class="registration">
		<div class='registration__wrapper'>
			<section class="registration__bg">
			<img src="/src/assets/img/registration_background.webp" alt="background" class="registration__img">
			</section>
			<section class="registration__form">
				<div class='registration__container'>
					<div>
						<h2 class="registration__title">Регистрация</h2>
						<h3 class="registration__subtitle">Добро пожаловать на Davai Davai Films</h3>
					</div>
				</div>
				<form action='/' id="registration-form" class="form">
				<div class='form__info'>
					<div class="form__group">
						<label for="login" class="form__label">Имя пользователя</label>
						<div class="form__input-wrapper">
							<img src="/src/assets/img/user.svg" alt="user">
							<input placeholder='Введите имя пользователя' type="text" id="login" name="login" class="form__input" required>
						</div>
						
					</div>
					<div class="form__group">
						<label for="password" class="form__label">Пароль</label>
						<div class="form__input-wrapper" >
							<img src="/src/assets/img/lock.svg" alt="lock">
							<input placeholder='Введите пароль' type="password" id="password" name="password" class="form__input" required>
							<img class="watch-icon" id="password-icon" src="/src/assets/img/eye_open.svg" alt="eye_open">
						</div>
					</div>
					<div class="form__group">
						<label for="confirm-password" class="form__label">Подтверждение пароля</label>
						<div class="form__input-wrapper">
							<img id="confirm-password-icon-lock" src="/src/assets/img/lock.svg" alt="lock">
							<input placeholder='Введите пароль' type="password" id="confirm-password" name="confirm-password" class="form__input" required>
							<img class="watch-icon" id="confirm-password-icon" src="/src/assets/img/eye_open.svg" alt="eye_open">
						</div>
						
					</div>
				</div>
				<div class='form__bottom'>
					<button type="submit" class="form__button">Зарегистрироваться</button>
					<div class="form__footer">
						<p class="form__footer-text">Уже есть аккаунт? <a href="/login" class="form__footer-link">Войти</a></p>
					</div>
				</div>
					
				</div>
			</section>
		</div>
		
    </main>
</div>