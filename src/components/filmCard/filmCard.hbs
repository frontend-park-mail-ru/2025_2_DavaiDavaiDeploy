<a class="film-card" id={{id}}>
    <article>
        <div class="film-card__image-container">
            <img src="{{image}}" alt={{title}} class="film-card__image">
            <div class="film-card__rating-{{ratingType}}">
                <h3>{{rating}}</h3>
            </div>
        </div>
        <div class="film-card__content">
            <h2 class="film-card__title">{{title}}</h2>
            <p class="film-card__info">{{info}}</p>
        </div>
    </article>
</a>
