{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@lib/react.js": ["lib/src/index.ts"],
      "@lib/*": ["lib/src/*"]
    },
    "esModuleInterop": true,
    "types": ["globals.d.ts"],
    "typeRoots": ["lib/src/types", "lib/src/types/globals.d.ts"]
  },
  "include": ["lib/src", "src/modules", "globals.d.ts"]
}
